<Window x:Class="WpfApp1.programWindow.Check"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.programWindow"
        mc:Ignorable="d"
        Title="Check" Height="459" Width="437">
    <Grid>
        <Button Content="Сохранить" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Height="42" Width="142" Click="Button_Click"/>
        <FlowDocumentReader Margin="0,65,0,0">
            <FlowDocument Name="CheckOrder">
                <Paragraph>
                    <TextBlock x:Name="txtCheckInfo" Text="Информация о чеке" Height="336" Width="360">
                        <UIElement.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform></ScaleTransform>
                                <SkewTransform></SkewTransform>
                                <RotateTransform></RotateTransform>
                                <TranslateTransform></TranslateTransform>
                            </TransformGroup>                            
                        </UIElement.RenderTransform>
                    </TextBlock>
                </Paragraph>
            </FlowDocument>
        </FlowDocumentReader>
    </Grid>
</Window>
